alias youtube-dl-best="youtube-dl -f 'bestvideo+bestaudio' --yes-playlist --download-archive downloaded.txt"
alias youtube-dl-720="youtube-dl -f 'bestvideo[height=720]+bestaudio' --yes-playlist --download-archive downloaded.txt"

alias myproxy="mitmproxy --listen-host 127.0.0.1 --listen-port 8080 -k"

# make mv ask before overwriting a file by default
alias mv="mv -i"

# move to trash instead of permanently removing
alias rm="gio trash"

alias xclip="xclip -selection clipboard"

alias hfzf="history | fzf +s --tac"

# disable line wrapping for base64
alias base64="base64 -w 0"
